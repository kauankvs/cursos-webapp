@model UsuarioDTO


@{
    ViewData["Title"] = "Criar conta";
}

<div class="formulario">
<h1>Crie Sua Conta</h1>

<form asp-action="Registrar" method="post">
    <div class="row linha-form">
        <div class="col">
            <label asp-for="Nome" for="nome">Nome</label>
            <input asp-for="Nome" type="text" id="nome" class="form-control" placeholder="Nome" required>
        </div>
         <div class="col">
            <label asp-for="Sobrenome" for="sobrenome">Sobrenome</label>
            <input asp-for="Sobrenome" type="text" id="sobrenome" class="form-control" placeholder="Sobrenome" required>
        </div>
    </div>
    <div class="row linha-form">
        <div class="form-group col-8">
            <label asp-for="Username" for="username">Username</label>
            <input asp-for="Username" type="text" class="form-control" id="username" placeholder="Username" required>
        </div>
        <div class="col-4">
             <label asp-for="Idade" for="idade">Idade</label>
             <input asp-for="Idade" type="number" id="idade" class="form-control" placeholder="Idade" required>
        </div>
    </div>
        <div class="form-group linha-form">
            <label asp-for="Email" for="email">Email</label>
            <input asp-for="Email" type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Email" required>
        </div>
         
        <div class="form-group linha-form">
            <label asp-for="Senha" for="senha">Senha</label>
            <input asp-for="Senha" type="password" class="form-control" id="senha" placeholder="Senha" required>
        </div>
    
        <button type="submit" class="linha-form btn btn-dark">Criar conta</button>
</form>

</div>
