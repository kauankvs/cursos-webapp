@model Curso

<div class="card mb-3 div-card-detalhe">
    <img src="@Model.CapaUrl" class="card-img-top imagem-detalhe" alt="...">
    <div class="card-body">
        <h5 class="card-title">@Model.Nome</h5>
        <p class="card-text">@Model.Descricao</p>
        <p class="card-text"><small class="text-body-secondary">Identificador: @Model.NomeUnico</small></p>
    </div>
</div>

<style>
    .imagem-detalhe {
        max-height: 350px;
        filter: brightness(0.30);
    }

    .div-card-detalhe {
        max-width: 650px;
        min-width: 200px;
        margin: auto;
    }
</style>