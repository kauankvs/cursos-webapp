@model Curso

<div class="card mb-3 div-card-detalhe">
    <img src="@Model.CapaUrl" class="card-img-top imagem-detalhe" alt="...">
    <div class="card-body">
        <h5 class="card-title titulo-detalhes">@Model.Nome</h5>
        <p class="card-text texto-detalhe">@Model.Descricao</p> 
        <p class="card-text">Duração: @Model.DuracaoEmMinutos minutos</p>
        <p class="card-text">Valor: R$@Model.Preco</p>
        <form asp-action="Matricular" asp-controller="Curso" method="post">
            <input asp-for="NomeUnico" class="input-curso"></input>
            <button type="submit" class="btn btn-outline-success botao-inscrever">Matricule-se</button>
        </form>
        <p class="card-text"><small class="text-body-secondary">@Model.NomeUnico</small></p>
    </div>
</div>

<style>
    .imagem-detalhe {
        max-height: 350px;
        filter: brightness(0.30);
    }

    .div-card-detalhe {
        max-width: 650px;
        min-width: 200px;
        margin: auto;
    }

    .botao-inscrever {
        margin-bottom: 2%;
    }

    .texto-detalhe {
        font-size: large;
    }

    .titulo-detalhes {
        font-size: x-large;
    }

    .input-curso {
        width: 0px;
        height: 0px;
        border: none;
        padding: 0px;
    }
</style>